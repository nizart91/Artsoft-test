{% extends 'base.html.twig' %}

{% block title %}Добавить книгу{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}
            <div class="form-group">
                <label for="book_name">{{ form_label(form.name) }}</label>
                {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'id': 'book_name'} }) }}
            </div>
            <div class="form-group">
                <label for="book_author">{{ form_label(form.author) }}</label>
                {{ form_widget(form.author, { 'attr': {'class': 'form-control', 'id': 'book_author'} }) }}
            </div>
            <div class="form-group">
                <label for="book_year">{{ form_label(form.year) }}</label>
                {{ form_widget(form.year, { 'attr': {'class': 'form-control', 'id': 'book_year'} }) }}
            </div>
            <div class="form-group">
                <label for="book_introtext">{{ form_label(form.introtext) }}</label>
                {{ form_widget(form.introtext, { 'attr': {'class': 'form-control', 'id': 'book_introtext'} }) }}
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
