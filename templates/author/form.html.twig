{% extends 'base.html.twig' %}

{% block title %}Добавить автора{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}
            <div class="form-group">
                <label for="author_name">{{ form_label(form.name) }}</label>
                {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'id': 'author_name'} }) }}
            </div>
            <div class="form-group">
                <label for="author_genre">{{ form_label(form.genre) }}</label>
                {{ form_widget(form.genre, { 'attr': {'class': 'form-control', 'id': 'author_genre'} }) }}
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
